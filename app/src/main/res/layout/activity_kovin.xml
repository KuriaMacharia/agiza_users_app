<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KovidActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_kovi_emergency_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/list_contact_centers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView61" />

        <TextView
            android:id="@+id/textView61"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/faded_bottom_black_light"
            android:fontFamily="@font/merriweather_regular"
            android:paddingStart="42dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="Corona Virus Emergency Numbers"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/img_home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/transparent_button"
            app:layout_constraintBottom_toBottomOf="@+id/img_home_kovid"
            app:layout_constraintEnd_toEndOf="@+id/img_home_kovid"
            app:layout_constraintStart_toStartOf="@+id/img_home_kovid"
            app:layout_constraintTop_toTopOf="@+id/img_home_kovid" />

        <ImageView
            android:id="@+id/img_home_kovid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/custom_pressed_medical"
            android:padding="8dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView61"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_home_green_30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>