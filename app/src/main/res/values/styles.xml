<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>

        <!-- This removes the white screen on app launch -->
        <!--item name="android:windowDisablePreview">true</item-->
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/a_background_spinner_pop_up</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Black" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/colourFive</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/white_phone_wallpaper</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuSecond</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Gold" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
        <!--<item name="android:popupBackground">#FFF</item>-->
    </style>

    <style name="OverflowMenuSecond" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
        <item name="android:popupBackground">@color/White</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="colorControlNormal">@color/blue</item>
        <item name="spinBars">true</item>
    </style>


</resources>
